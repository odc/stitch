{
  "name": "@odcode/stitch",
  "version": "0.1.4",
  "description": "Seamlessly connecting the small gaps in your development workflow with AI",
  "main": "dist/index.js",
  "bin": {
    "st": "dist/cli.js"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsup && chmod +x dist/cli.js",
    "dev": "tsup --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "lint": "eslint src",
    "format": "prettier --write src",
    "link-local": "pnpm link --global",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "prepublishOnly": "pnpm run build && pnpm run test",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "cli",
    "git",
    "ai",
    "development",
    "workflow"
  ],
  "author": "ODCode (https://github.com/odc)",
  "license": "MIT",
  "packageManager": "pnpm@9.10.0",
  "devDependencies": {
    "@eslint/js": "^8.57.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/odc/stitch.git"
  },
  "bugs": {
    "url": "https://github.com/odc/stitch/issues"
  },
  "homepage": "https://github.com/odc/stitch#readme"
}
