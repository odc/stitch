{
  "name": "@odc/stitch",
  "version": "0.1.0",
  "description": "Seamlessly connecting the small gaps in your development workflow with AI",
  "main": "dist/index.js",
  "bin": {
    "st": "dist/cli.js"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "tsup && chmod +x dist/cli.js",
    "dev": "tsup --watch",
    "start": "node dist/cli.js",
    "test": "jest",
    "lint": "eslint src",
    "format": "prettier --write src",
    "link-local": "pnpm link --global"
  },
  "keywords": [
    "cli",
    "git",
    "ai",
    "development",
    "workflow"
  ],
  "author": "ODCode",
  "license": "MIT",
  "packageManager": "pnpm@8.15.4",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.0",
    "@typescript-eslint/eslint-plugin": "^8.14.0",
    "@typescript-eslint/parser": "^8.14.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "commander": "^12.1.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
